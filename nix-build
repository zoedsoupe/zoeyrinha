#! /bin/zsh

if (( # == 0 )); then
  print >&2 "Usage: $0 personal or  iso"
  exit 1
fi

case "$1" in
  "personal")
     if ! type darwin-rebuild > /dev/null; then
       nix --extra-experimental-features "nix-command flakes" run nix-darwin/nix-darwin-25.05#darwin-rebuild -- switch --flake .#zoedsoupe-mac
     else
       darwin-rebuild switch --show-trace --flake .#zoedsoupe-mac
     fi
     ;;

  "iso")
    nix build .#nixosConfigurations.minimal-iso.config.system.build.isoImage "${@:2}"
    ;;

  *)
    print >&2 "Available options are, \"personal\" \"iso\" for now"
    exit 1
    ;;
esac
